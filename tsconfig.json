{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es6",
    "allowJs": true,
    "jsx": "react",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "sourceMap": true,
    "moduleResolution": "Node",
    "paths": {
      "MainProcess/*": ["./src/main-process/*"],
      "Assets/*": ["./src/assets/*"],
      "Components/*": ["./src/components/*"],
      "UI/*": ["./src/components/ui/*"],
      "Config/*": ["./src/config/*"],
      "Helpers/*": ["./src/helpers/*"],
      "Hooks/*": ["./src/hooks/*"],
      "Models/*": ["./src/models/*"]
    }
  }
}
